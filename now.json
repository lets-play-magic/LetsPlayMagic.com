{
    "name": "lets-play-magic",
    "version": 2,
    "alias": ["letsplaymagic.com"],
    "builds": [
        { "src": "www/package.json", "use": "@now/next" },
        { "src": "api/index.js", "use": "@now/node-server" }
    ],
    "routes": [
        {
          "src": "/api(.*)",
          "dest": "/api/index.js"
        },
        {
          "src": "/(.*)",
          "dest": "/www/$1",
          "headers": {
            "x-request-path": "$1"
          }
        }
    ]
}
